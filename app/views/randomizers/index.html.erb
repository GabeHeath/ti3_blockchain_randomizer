       </tr>
<% end %>
      </tbody>

    </table>
  </div>

  <div class="col-md-4">
    <h2 class="recent-activity">Recent Activity</h2>

    <% if @activities.count > 0 %>
        <% @activities.each do |activity| %>
              <%= render_activity activity %>
        <% end %>
    <% else %>
        <hr>
        <div class="text-muted"><i class="glyphicon glyphicon-exclamation-sign"></i> No Activity</div>
