<script>
    $(document).ready(function () {
        var newYear = new Date();
        newYear = new Date(<%= @time %>);
        $('#countdown').countdown({until: newYear, format: 'MS', onExpiry: refreshPage});
    })
</script>



<div class="col-md-12">

  <div class="col-md-7 checksum">
    <b>Players SHA-256 Checksum</b>: <%= @randomizer.player_checksum %> <br>
    <b>Races SHA-256 Checksum:</b> <%= @randomizer.race_checksum %> <br>
  </div>

  <div class="col-md-4 col-md-offset-1">
    <div id="countdown"></div>
  </div>
</div>


